pidfile=/run/edge.pid

depend() {
	use net
}

start() {
	ebegin "Starting edge"
	start-stop-daemon \
		--start \
		--quiet \
		--background --make-pidfile --pidfile "$pidfile" \
		--exec /usr/sbin/edge \
		--env N2N_KEY="${KEY}" \
		-- -a "${ADDRESS}" \
			-c "${COMMUNITY}" \
			-l "${SUPERNODE}" \
			-u ${USER} -g ${GROUP} -f ${OPTIONS}
	eend $?
}

stop() {
	ebegin "Stopping edge"
	start-stop-daemon \
		--stop \
		--pidfile "$pidfile"
	eend $?
}
