depend() {
	use net
}

start() {
	ebegin "Starting supernode"
	start-stop-daemon \
		--start \
		--quiet \
		--exec /usr/sbin/supernode \
		--user ${USER}:${GROUP} \
		-- -l "${PORT}"
	eend $?
}

stop() {
	ebegin "Stopping supernode"
	start-stop-daemon \
		--stop \
		--exec /usr/sbin/supernode
	eend $?
}
